{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./src/*"]
    },
    "types": ["node"],
    "moduleResolution": "Bundler",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.stories.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
