{
  "name": "hohoro",
  "description": "An incremental build tool for JavaScript and TypeScript projects.",
  "version": "1.0.1",
  "bin": {
    "hohoro": "./bin/index.mjs",
    "hohoro-legacy": "./bin/legacy.mjs"
  },
  "exports": {
    ".": "./incremental-build.mjs",
    "./legacy": "./legacy-incremental-build.mjs"
  },
  "repository": {
    "type": "git",
    "directory": "packages/hohoro",
    "url": "https://github.com/hamlim/hohoro"
  },
  "homepage": "https://hohoro-docs.mhamlin.workers.dev/",
  "license": "MIT",
  "author": {
    "name": "Matthew Hamlin",
    "email": "matthewjameshamlin@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "@swc/cli": "0.7.8",
    "@swc/core": "1.14.0",
    "@types/bun": "1.3.2",
    "typescript": "5.9.3",
    "oxc-transform": "0.96.0"
  },
  "dependencies": {
    "debug": "4.3.4",
    "fast-glob": "3.3.2",
    "oxc-transform": "0.96.0"
  },
  "peerDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.14.0",
    "typescript": "*"
  },
  "scripts": {
    "lint": "biome lint ./",
    "test": "bun test",
